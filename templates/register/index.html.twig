{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block content %}
    <div class="block-small">
        <h1>Sign Up</h1>

        {% if notification %}
            <div class="alert alert-info">{{ notification }}</div>
            <hr />
        {% endif %}

        {{ form_start(registerForm) }}
        {{ form_widget(registerForm) }}
        {{ form_end(registerForm) }}

        <p class="pt-2">Already have an account ? <a href="/login">Log In</a></p>
    </div>
{% endblock %}
