{% extends 'base.html.twig' %}

{% block title %}My Addresses - Eshoptimal{% endblock %}

{% block content %}
    <a href="{{ path('account_address_add') }}" class="btn btn-info btn-sm float-right">Add an address</a>
    <h1>My addresses</h1>
    Here you will be able to manage your addresses.<br/>
    <a href="{{ path('account') }}">Back to my account</a>
    <hr/>

    {% if app.user.addresses|length == 0 %}
        <p class="text-center">
            You have not added any address yet in your client account. If you want to add one, please <a href="{{ path('account_address_add') }}">click here</a>
        </p>
    {% else %}
        <div class="row">
            {% for address in app.user.addresses %}
                <div class="col-md-4">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{ address.name }}</h5>
                            <p class="card-text">
                                {{ address.address }}, <br/>
                                {{ address.zipcode }} - {{ address.city }} - {{ address.country }}
                            </p>
                            <a href="{{ path('account_address_edit', {'id' : address.id}) }}">Modify</a> | <a href="{{ path('account_address_delete', {'id' : address.id}) }}">Delete</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}