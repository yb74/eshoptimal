{% extends 'base.html.twig' %}

{% block title %}My Account - Eshoptimal{% endblock %}

{% block content %}
    <h1>My account</h1>
    {% if is_granted('ROLE_ADMIN') %}
        <small><a href="/admin">Go to the dashboard</a></small><br/>
    {% endif %}
    Welcome into your account {{ app.user.firstname }}. <br/>
    Here you will be able to manage your personal information.
    <hr/>
    <div class="row">
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{ asset('assets/img/password.png') }}" alt="Modify my password"><br/>
                <a href="{{ path('account_password') }}">Modify my password"</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{ asset('assets/img/address-book.png') }}" alt="Manage my addresses"><br/>
                <a href="{{ path('account_address') }}">Manage my addresses</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{ asset('assets/img/purchase.png') }}" alt="My orders"><br/>
                <a href="{{ path('account_order') }}">My orders</a>
            </div>
        </div>
    </div>
    <hr>
{% endblock %}
